#!/bin/bash -eu

function main() {
  local iaas
  iaas=${1}

	local root_dir
	root_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"

  if [ -z ${iaas} ]; then
    echo "Usage: ./scripts/acceptance_tests IAAS
IAAS: \"aws\" or \"gcp\" or \"azure\""
    return
  fi

	pushd "${root_dir}" > /dev/null
      ginkgo -r -race -failFast -randomizeAllSpecs -randomizeSuites acceptance-tests/${iaas} # acceptance-tests/bbl acceptance-tests/${iaas}
	popd > /dev/null
}

main "${@:-""}"
